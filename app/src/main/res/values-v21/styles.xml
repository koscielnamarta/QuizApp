<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="checkBoxes" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">@dimen/textXS</item>
        <item name="android:layout_marginRight">@dimen/marginL</item>
        <item name="android:layout_marginLeft">@dimen/marginL</item>
        <item name="android:layout_marginBottom">@dimen/marginS</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textColorSecondary">@color/colorSecondary</item>
    </style>
        <style name="radioButtons" parent="Theme.AppCompat.Light.NoActionBar">
            <item name="android:textColor">@color/text</item>
            <item name="android:textSize">@dimen/textXS</item>
            <item name="android:layout_marginRight">@dimen/marginL</item>
            <item name="android:layout_marginLeft">@dimen/marginL</item>
            <item name="android:layout_marginBottom">@dimen/marginS</item>
            <item name="android:fontFamily">@font/lato_regular</item>
            <item name="android:colorControlActivated">@color/colorSecondary</item>

    </style>

    <style name="editText" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@color/text</item>
        <item name="android:textColorHint">@color/colorAccent</item>
        <item name="android:backgroundTint">@color/colorAccent</item>
        <item name="android:layout_marginBottom">@dimen/marginS</item>
        <item name="android:layout_marginRight">@dimen/marginL</item>
        <item name="android:layout_marginLeft">@dimen/marginL</item>
        <item name="android:textSize">@dimen/textXS</item>
    </style>
</resources>