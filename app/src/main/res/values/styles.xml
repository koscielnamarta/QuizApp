<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="textsNormal" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">@dimen/textS</item>
        <item name="android:layout_marginRight">@dimen/marginM</item>
        <item name="android:layout_marginLeft">@dimen/marginM</item>
        <item name="android:layout_marginTop">@dimen/marginM</item>
        <item name="android:layout_marginBottom">@dimen/marginS</item>
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <style name="checkBoxes" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">@dimen/textXS</item>
        <item name="android:layout_marginRight">@dimen/marginL</item>
        <item name="android:layout_marginLeft">@dimen/marginL</item>
        <item name="android:layout_marginBottom">@dimen/marginS</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textColorSecondary">@color/colorSecondary</item>
    </style>

    <style name="radioButtons" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">@dimen/textXS</item>
        <item name="android:layout_marginRight">@dimen/marginL</item>
        <item name="android:layout_marginLeft">@dimen/marginL</item>
        <item name="android:layout_marginBottom">@dimen/marginS</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:colorControlActivated">@color/colorSecondary</item>
    </style>

    <style name="editText" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@color/text</item>
        <item name="android:textColorHint">@color/colorAccent</item>
        <item name="android:backgroundTint">@color/colorAccent</item>
        <item name="android:layout_marginBottom">@dimen/marginS</item>
        <item name="android:layout_marginRight">@dimen/marginL</item>
        <item name="android:layout_marginLeft">@dimen/marginL</item>
        <item name="android:textSize">@dimen/textXS</item>
    </style>

</resources>
